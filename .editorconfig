# EditorConfig is awesome: https://EditorConfig.org
# Root EditorConfig file for Habit Tracking Web Application
root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS, SCSS, and style files
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configuration files
[*.{config,conf}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Documentation files
[*.{txt,doc,docx}]
trim_trailing_whitespace = true
insert_final_newline = true

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Ignore minified files
[**.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
# API Configuration
# Base URL for development API endpoints with version prefix
VITE_API_URL=http://localhost:3000/v1

# Extended timeout and retry settings for development debugging
API_TIMEOUT=60000
MAX_RETRIES=5

# Auth0 Development Configuration
# Development tenant settings with local callback URLs
VITE_AUTH0_DOMAIN=dev-habittracker.auth0.com
VITE_AUTH0_CLIENT_ID=development_client_id
VITE_AUTH0_AUDIENCE=http://localhost:3000
VITE_AUTH0_REDIRECT_URI=http://localhost:5173/callback

# Analytics and Monitoring
# Development environment tracking IDs
VITE_ANALYTICS_ID=G-DEV-ANALYTICS-ID
VITE_SENTRY_DSN=http://localhost:9000

# Environment Identifier
VITE_APP_ENV=development

# Development Feature Flags
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_API_MOCKING=true
VITE_ENABLE_ERROR_BOUNDARIES=true

# Development Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_NETWORK_LOGGING=true

# CORS Configuration for Local Development
VITE_CORS_ENABLED=true
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Cache Configuration
VITE_CACHE_TTL=300
VITE_ENABLE_SERVICE_WORKER=true

# Development WebSocket Configuration
VITE_WS_URL=ws://localhost:3000

# Rate Limiting Configuration (Aligned with API constants)
VITE_RATE_LIMIT_HABITS_LIST=100
VITE_RATE_LIMIT_HABITS_CREATE=60
VITE_RATE_LIMIT_HABITS_UPDATE=60
VITE_RATE_LIMIT_HABITS_LOG=120
VITE_RATE_LIMIT_ANALYTICS=30
{
  "name": "@habit-tracker/backend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src/*-service"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "bootstrap": "npm install && npm run install:all",
    "install:all": "npm run install:analytics && npm run install:auth && npm run install:habits",
    "install:analytics": "cd src/analytics-service && npm install",
    "install:auth": "cd src/auth-service && npm install",
    "install:habits": "cd src/habit-service && npm install",
    "build": "npm run build:all",
    "build:all": "concurrently \"npm run build:analytics\" \"npm run build:auth\" \"npm run build:habits\"",
    "build:analytics": "cd src/analytics-service && npm run build",
    "build:auth": "cd src/auth-service && npm run build",
    "build:habits": "cd src/habit-service && npm run build",
    "start": "cross-env NODE_ENV=production concurrently \"npm run start:analytics\" \"npm run start:auth\" \"npm run start:habits\"",
    "start:analytics": "cd src/analytics-service && npm start",
    "start:auth": "cd src/auth-service && npm start",
    "start:habits": "cd src/habit-service && npm start",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:analytics\" \"npm run dev:auth\" \"npm run dev:habits\"",
    "dev:analytics": "cd src/analytics-service && npm run dev",
    "dev:auth": "cd src/auth-service && npm run dev",
    "dev:habits": "cd src/habit-service && npm run dev",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --detectOpenHandles",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "clean": "rimraf dist && rimraf src/**/dist && rimraf coverage",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:staging": "cross-env NODE_ENV=staging npm run build && npm run docker:up",
    "deploy:prod": "cross-env NODE_ENV=production npm run build && npm run docker:up"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.0",
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/microservices": "^9.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@prisma/client": "^4.9.0",
    "@sendgrid/mail": "^7.7.0",
    "auth0": "^3.3.0",
    "auth0-config-validator": "^1.0.0",
    "bcrypt": "^5.1.0",
    "class-sanitizer": "1.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-timeout-handler": "^2.2.0",
    "express-validator": "^6.14.0",
    "google-protobuf": "^3.0.0",
    "helmet": "^6.0.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "ioredis": "^5.3.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.5.1",
    "lodash": "4.x",
    "morgan": "^1.10.0",
    "objection": "3.0.1",
    "pg": "^8.10.0",
    "pino": "^8.0.0",
    "rate-limit-redis": "3.x",
    "rate-limiter-flexible": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "4.x",
    "typeorm": "^0.3.0",
    "uuid": "9.x",
    "winston": "^3.8.0",
    "winston-daily-rotate-file": "4.x"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "29.0.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.0.0",
    "mockdate": "^3.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.0",
    "rimraf": "^4.4.0",
    "snyk": "1.1130.0",
    "supertest": "^6.3.3",
    "testcontainers": "^8.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
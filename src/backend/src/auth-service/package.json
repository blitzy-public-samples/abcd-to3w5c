{
  "name": "@habit-tracker/auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice for habit tracking application",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:security": "snyk test",
    "prepare": "snyk protect",
    "audit": "npm audit",
    "ci": "npm run format && npm run lint && npm run test && npm run test:security",
    "clean": "rimraf dist coverage",
    "proto:generate": "protoc --plugin=protoc-gen-ts_proto"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.0",
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/microservices": "^9.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@prisma/client": "^4.9.0",
    "@sendgrid/mail": "^7.7.0",
    "auth0": "^3.3.0",
    "auth0-config-validator": "^1.0.0",
    "bcrypt": "^5.1.0",
    "class-sanitizer": "1.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-timeout-handler": "^2.2.0",
    "express-validator": "^6.14.0",
    "google-protobuf": "^3.0.0",
    "helmet": "^6.0.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "ioredis": "^5.3.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "4.x",
    "morgan": "^1.10.0",
    "pino": "^8.0.0",
    "rate-limit-redis": "3.x",
    "rate-limiter-flexible": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "4.x",
    "uuid": "9.x",
    "winston": "^3.8.0",
    "winston-daily-rotate-file": "4.x"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "29.0.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.0.0",
    "mockdate": "^3.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.0",
    "rimraf": "^4.4.0",
    "snyk": "1.1130.0",
    "supertest": "^6.3.3",
    "testcontainers": "^8.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}